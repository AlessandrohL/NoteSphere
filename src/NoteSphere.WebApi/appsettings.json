{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "JwtSettings": {
    "ValidAudience": "https://example.com",
    "ValidIssuer": "NoteSphereApi",
    "Secret": "your secret",
    "TokenLifetimeMinutes": 1,
    "RefreshTokenLifetimeDays": 7,
    "CookieName": "your cookie name",
    "CookieLifetimeDays": 1
  },
  "EmailConfiguration": {
    "From": "Email sender",
    "SmtpServer": "smtp.gmail.com",
    "Port": 587,
    "Username": "",
    "Password": ""
  },
  "ClientConfiguration": {
    "BaseUrl": "your client url",
    "ConfirmationEndpoint": "confirmation route, auth/confirmEmail"
  }
}